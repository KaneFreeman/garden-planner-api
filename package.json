{
  "name": "garden-planner-backend",
  "version": "1.0.0-alpha1",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist-prod && nest build -p tsconfig.prod.json --config nest-cli-prod.json",
    "deploy": "npm run build && node service.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:restart": "npm run docker:down && docker-compose build --no-cache && npm run docker:up",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "rimraf dist && cross-env NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist-prod/main",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\""
  },
  "dependencies": {
    "@nestjs-modules/mailer": "2.0.2",
    "@nestjs/common": "11.1.6",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.6",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/mongoose": "11.0.3",
    "@nestjs/platform-express": "11.1.6",
    "@nestjs/schedule": "5.0.1",
    "@nestjs/swagger": "11.2.0",
    "bcryptjs": "3.0.2",
    "cookie-parser": "1.4.7",
    "date-fns": "3.6.0",
    "dotenv": "16.6.1",
    "ejs": "3.1.10",
    "express": "4.21.2",
    "handlebars": "4.7.8",
    "liquidjs": "10.21.1",
    "mjml": "4.15.3",
    "mongoose": "8.17.1",
    "nest-winston": "1.10.2",
    "nodemailer": "6.10.1",
    "preview-email": "3.1.0",
    "pug": "3.0.3",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "rxjs": "7.8.2",
    "swagger-ui-express": "5.0.1",
    "uuid": "^11.1.0",
    "winston": "3.17.0"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.10",
    "@nestjs/schematics": "11.0.7",
    "@types/cookie-parser": "1.4.10",
    "@types/ejs": "3.1.5",
    "@types/express": "5.0.1",
    "@types/mjml": "4.7.4",
    "@types/node": "20.19.10",
    "@types/nodemailer": "7.0.2",
    "@types/pug": "2.0.10",
    "@typescript-eslint/eslint-plugin": "8.39.0",
    "@typescript-eslint/parser": "8.39.0",
    "cross-env": "10.0.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "node-windows": "1.0.0-beta.8",
    "prettier": "3.6.2",
    "source-map-support": "0.5.21",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.2",
    "webpack": "5.101.0"
  },
  "prettier": {
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ],
    "trailingComma": "none",
    "singleQuote": true,
    "printWidth": 120
  },
  "engines": {
    "node": ">=20 <21"
  }
}
