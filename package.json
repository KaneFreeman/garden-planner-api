{
  "name": "garden-planner-backend",
  "version": "1.0.0-alpha1",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist-prod && nest build -p tsconfig.prod.json --config nest-cli-prod.json",
    "deploy": "npm run build && node service.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "rimraf dist && cross-env NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist-prod/main",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\""
  },
  "dependencies": {
    "@nestjs-modules/mailer": "1.11.2",
    "@nestjs/common": "10.4.15",
    "@nestjs/config": "3.3.0",
    "@nestjs/core": "10.4.15",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/mongoose": "10.1.0",
    "@nestjs/platform-express": "10.4.15",
    "@nestjs/schedule": "4.1.2",
    "@nestjs/swagger": "7.4.2",
    "bcrypt": "5.1.1",
    "date-fns": "3.6.0",
    "dotenv": "16.4.7",
    "ejs": "3.1.10",
    "express": "4.21.2",
    "handlebars": "4.7.8",
    "mongoose": "8.9.0",
    "nest-winston": "1.10.0",
    "nodemailer": "6.9.16",
    "pug": "3.0.3",
    "reflect-metadata": "0.2.2",
    "rimraf": "5.0.10",
    "rxjs": "7.8.1",
    "swagger-ui-express": "5.0.1",
    "winston": "3.17.0"
  },
  "devDependencies": {
    "@nestjs/cli": "10.4.9",
    "@nestjs/schematics": "10.2.3",
    "@types/bcrypt": "5.0.2",
    "@types/ejs": "3.1.5",
    "@types/express": "5.0.0",
    "@types/node": "22.8.2",
    "@types/nodemailer": "6.4.17",
    "@types/pug": "2.0.10",
    "@typescript-eslint/eslint-plugin": "8.18.1",
    "@typescript-eslint/parser": "8.18.1",
    "cross-env": "7.0.3",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "node-windows": "1.0.0-beta.8",
    "prettier": "3.4.2",
    "source-map-support": "0.5.21",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.2",
    "webpack": "5.97.1"
  },
  "prettier": {
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ],
    "trailingComma": "none",
    "singleQuote": true,
    "printWidth": 120
  },
  "engines": {
    "node": ">=18.18 <19"
  }
}
